<div id="tabs-section">
  <ul class="tabs">
    <li><a href="#tab-1">описание</a></li>
    <li><a href="#tab-2">размеры</a></li>
    <li><a href="#tab-3">доставка</a></li>
  </ul>
  <div id="tab-1">
  {% if product.type == "Леггинсы"%}
  	{{pages.leggins-material.content}}
  {% endif %}
  {% if product.type == "Свитшот"%}
  	{{pages.sweatshirt-material.content}}
  {% endif %}
  {% if product.type == "Купальник"%}
  	{{pages.swimsuit-material.content}}
  {% endif %}
  {% if product.type == "Платье"%}
    {{pages.sweatshirt-material.content}}
  {% endif %}
  </div>
  <div id="tab-2">
 {{ pages.size-chart.content }}   
  </div>
  <div id="tab-3">
  {{pages.delivery-tab.content}}
  </div>        
</div>

<script>
  $(document).ready(function() {
    $('ul.tabs').each(function(){
      var active, content, links = $(this).find('a');
      active = links.first().addClass('active');
      content = $(active.attr('href'));
      links.not(':first').each(function () {
        $($(this).attr('href')).hide();
      });
      $(this).find('a').click(function(e){
        active.removeClass('active');
        content.hide();
        active = $(this);
        content = $($(this).attr('href'));
        active.addClass('active');
        content.show();
        return false;
      });
    });
  });
</script>


<style>
#tabs-section {
	border-bottom: 1px solid #DDDDDD;
	padding-bottom: 20px;
}

